@using Galaxon.Astronomy.SpaceCalendars.com.Models
@model Galaxon.Astronomy.SpaceCalendars.com.Models.MessageBox?

@if (Model != null)
{
    foreach ((EMessageSeverity severity, List<string> messages) in Model.Messages)
    {
        <div class="alert alert-@severity" role="alert">
            @foreach (string message in messages)
            {
                if (messages.Count > 1)
                {
                    <span>&bull; </span>
                }
                <span>@message</span>
                <br/>
            }
        </div>
    }
}
