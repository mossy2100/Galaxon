@model Galaxon.Astronomy.Data.Models.DocumentRecord

<partial model="Model" name="_Details"/>

<div class="field">
    <a asp-action="Index" asp-controller="Document"
        class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to Index</a>
    <a asp-action="Edit" asp-controller="Document" asp-route-id="@Model.Id"
        class="btn btn-primary"><i class="bi bi-pencil-square"></i> Update</a>
    <a asp-action="Delete" asp-controller="Document" asp-route-id="@Model.Id"
        class="btn btn-danger"><i class="bi bi-trash3"></i> Delete</a>
</div>
